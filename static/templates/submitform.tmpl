{{define "submitform"}}
    <form class="submit-form" action='/submit' method='post'>
        
        {{if .Sub}}<input type="hidden" name="sub" value="{{.Sub}}">{{end}}
        {{if .ReplyTo}}<input type="hidden" name="replyto" value="{{.ReplyTo}}">{{end}}
        <textarea maxlength="500" oninput='this.nextElementSibling.innerText = this.value.length +"/500";' class="mdl-textfield__input message-input expanding" type="text" id="message" placeholder="Write here. Remember to be nice..." name="message" required></textarea>        
        <div id='numleft' class='num-left'>0/500</div>
        <div class="submit-post-button">            
            <div class="spb-button">
                <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effec" value="Submit">
            </div>            
        </div>
    </form>   

{{end}}