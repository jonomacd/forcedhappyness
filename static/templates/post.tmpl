{{define "body"}}
    <div class="fh-feed mdl-layout mdl-js-layout has-drawer is-upgraded">
        <main class="mdl-layout__content">
            <div class="fh-feed__posts mdl-grid">
                <div class="mdl-card amazing mdl-cell mdl-cell--12-col">
                    <div class="mdl-card--border">
                        <form action="/post" method='post'>                        
                            <div class="mdl-textfield mdl-js-textfield">
                                <textarea class="mdl-textfield__input" type="text" rows= "3" id="message" name="message"></textarea>
                            </div>
                            </br>
                            {{if .Sub}}<input type="hidden" name="sub" value="{{.Sub}}">{{end}}
                            <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effec" value="Submit">
                        </form>                
                    </div>
                </div>
            </div>
        </main>
    </div>    
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
{{end}}